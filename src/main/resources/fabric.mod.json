{
  "schemaVersion": 1,
  "id": "blockify",
  "version": "${version}",

  "name": "Blockify",
  "description": "Allows users to passthrough their Spotify information into Minecraft",
  "authors": [
    "James DeLoach & clownless"
  ],
  "contributors": [
    "Motschen"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/blockify",
    "sources": "https://github.com/clownless/Blockify",
    "issues": "https://github.com/clownless/Blockify/issues"
  },

  "license": "CC0-1.0",
  "icon": "assets/blockify/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "com.clownless.blockify.BlockifyMain"
    ]
  },
  "mixins": [
    "blockify.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17",
    "midnightlib": ">=0.4.0"
  }
}
